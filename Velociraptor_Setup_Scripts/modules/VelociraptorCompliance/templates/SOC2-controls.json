    {
      "CategoryId": "P",
      "CategoryName": "Privacy",
      "Description": "Privacy criteria related to personal information protection",
      "Controls": [
        {
          "Id": "P1.1",
          "Title": "Privacy - Personal Information Collection",
          "Description": "The entity collects personal information only for the purposes identified in the entity's objectives.",
          "TestType": "Process",
          "TrustServiceCategory": ["Privacy"],
          "Implementation": "Required",
          "Parameters": [
            {
              "Name": "PersonalInfoCollection",
              "Type": "Boolean",
              "Required": true,
              "Description": "Personal information collection is limited to purpose"
            },
            {
              "Name": "CollectionPurpose",
              "Type": "Boolean",
              "Required": true,
              "Description": "Collection purpose is identified"
            }
          ],
          "TestCriteria": [
            "Verify personal information collection is limited",
            "Verify collection purpose is identified",
            "Verify collection is necessary for objectives",
            "Verify consent is obtained when required"
          ]
        },
        {
          "Id": "P2.1",
          "Title": "Privacy - Personal Information Use and Retention",
          "Description": "The entity uses and retains personal information consistent with the entity's objectives.",
          "TestType": "Process",
          "TrustServiceCategory": ["Privacy"],
          "Implementation": "Required",
          "Parameters": [
            {
              "Name": "PersonalInfoUse",
              "Type": "Boolean",
              "Required": true,
              "Description": "Personal information use is consistent with objectives"
            },
            {
              "Name": "PersonalInfoRetention",
              "Type": "Boolean",
              "Required": true,
              "Description": "Personal information retention is appropriate"
            }
          ],
          "TestCriteria": [
            "Verify personal information use is consistent",
            "Verify retention periods are appropriate",
            "Verify information is disposed when no longer needed",
            "Verify use is authorized"
          ]
        }

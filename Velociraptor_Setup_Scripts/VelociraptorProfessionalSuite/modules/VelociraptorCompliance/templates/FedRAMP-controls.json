{
  "Framework": "FedRAMP",
  "Version": "2.0",
  "Description": "Federal Risk and Authorization Management Program (FedRAMP) Security Controls",
  "AuthorizationLevels": ["Low", "Moderate", "High"],
  "ControlFamilies": [
    {
      "FamilyId": "AC",
      "FamilyName": "Access Control",
      "Controls": [
        {
          "Id": "AC-1",
          "Title": "Access Control Policy and Procedures",
          "Description": "The organization develops, documents, and disseminates access control policy and procedures.",
          "TestType": "Process",
          "AuthorizationLevel": ["Low", "Moderate", "High"],
          "Implementation": "Required",
          "Parameters": [
            {
              "Name": "PolicyDocumentation",
              "Type": "Boolean",
              "Required": true,
              "Description": "Access control policy is documented"
            },
            {
              "Name": "ProceduresDocumented",
              "Type": "Boolean", 
              "Required": true,
              "Description": "Access control procedures are documented"
            },
            {
              "Name": "ReviewFrequency",
              "Type": "String",
              "Required": true,
              "Description": "Policy review frequency (annually minimum)"
            }
          ],
          "TestCriteria": [
            "Verify access control policy exists and is current",
            "Verify procedures are documented and implemented",
            "Verify policy is reviewed at least annually"
          ]
        },
        {
          "Id": "AC-2",
          "Title": "Account Management",
          "Description": "The organization manages system accounts, group memberships, privileges, workflow, notifications, deactivations, and reviews.",
          "TestType": "Technical",
          "AuthorizationLevel": ["Low", "Moderate", "High"],
          "Implementation": "Required",
          "Parameters": [
            {
              "Name": "AccountCreationProcess",
              "Type": "Boolean",
              "Required": true,
              "Description": "Formal account creation process exists"
            },
            {
              "Name": "PrivilegeReview",
              "Type": "Boolean",
              "Required": true,
              "Description": "Regular privilege reviews are conducted"
            },
            {
              "Name": "AccountDeactivation",
              "Type": "Boolean",
              "Required": true,
              "Description": "Account deactivation process is automated/timely"
            }
          ],
          "TestCriteria": [
            "Verify account creation requires authorization",
            "Verify privileged accounts are reviewed regularly",
            "Verify inactive accounts are disabled promptly"
          ]
        },
        {
          "Id": "AC-3",
          "Title": "Access Enforcement",
          "Description": "The information system enforces approved authorizations for logical access.",
          "TestType": "Technical",
          "AuthorizationLevel": ["Low", "Moderate", "High"],
          "Implementation": "Required",
          "Parameters": [
            {
              "Name": "LogicalAccessControls",
              "Type": "Boolean",
              "Required": true,
              "Description": "Logical access controls are implemented"
            },
            {
              "Name": "AuthorizationMechanism",
              "Type": "String",
              "Required": true,
              "Description": "Access authorization mechanism type"
            }
          ],
          "TestCriteria": [
            "Verify access controls prevent unauthorized access",
            "Verify authorization mechanisms are functioning",
            "Verify access is granted based on approved authorizations"
          ]
        }
      ]
    },
